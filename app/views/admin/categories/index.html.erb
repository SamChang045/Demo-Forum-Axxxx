<div class="container">
  <div class="row">
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to "Edit", admin_categories_path(category), class: "btn btn-primary" %>
              <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure??" }, class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>