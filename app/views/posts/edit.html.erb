<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-4">
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Title", class: "form-control bg-light" %>
        </div>
        <div class="form-group">
          <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: true}, {class: "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control bg-light" %>
        </div>
        <div class="form-group">
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <div class="form-check form-check-inline">
            Who Can See
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button :post, :authority, "all", { checked: true , class: "form-check-input" } %>
            <%= label_tag :authority_All, "Public", class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button :post, :authority, "friend", class: "form-check-input" %>
            <%= label_tag :authority_Friend, "Only Friends", class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button :post, :authority, "myself", class: "form-check-input" %>
            <%= label_tag :authority_Myself, "Private", class: "form-check-label" %>
          </div>
        </div>
        <div class="form-group">
          Status:
        </div>
        <div class="form-group">
          <%= f.submit "Save Draft" , class: "btn btn-primary" %>
          <%= f.submit "Submit" , class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>