<div class="user-item text-center mt-3 mb-3">
  <%= link_to user_path(user), class: "nav-link" do %>
    <div class="avatar">
      <% if user.avatar? %>
        <%= image_tag user.avatar, width: "100%" %>
      <% else %>
        <%= fa_icon "user 5x" %>
      <% end %>
    </div>
    <p><strong><%= user.name %></strong></p>
  <% end %>

  <div class="links" id="user-<%= user.id %>">
    <% if user !=  current_user %>
      <% unless current_user.friend?(user) %>
        <% if current_user.not_yet_responded_to?(user) %>
          <%= link_to "接受好友邀請", accept_friendship_path(user), class: "btn btn-primary", method: :post, remote: true %><br>
          <%= link_to "忽略好友邀請", ignore_friendship_path(user), class: "btn btn-danger", method: :delete, remote: true %>
        <% elsif current_user.not_yet_accepted_by?(user) %>
        <% else %>
          <%= link_to "要求加入好友", friendships_path(friend_id: user), class: "btn btn-primary", method: :post, remote: true %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>